import numpy as np
import pandas as pd

# Simulasi dataset medan regangan dan posisi ujung retakan
# Menggunakan koordinat titik retakan dan nilai strain sebagai fitur

def simulate_data(num_samples=1000):
    data = []
    for i in range(num_samples):
        # Koordinat ujung retakan (misalnya di sekitar area tertentu)
        x1, y1 = np.random.uniform(0, 10), np.random.uniform(0, 10)
        x2, y2 = x1 + np.random.uniform(0, 2), y1 + np.random.uniform(0, 2)
        
        # Nilai medan regangan utama maksimum di berbagai titik
        strain_field = np.random.uniform(0, 1, 6)  # 6 strain gauge points
        
        data.append([x1, y1, x2, y2] + strain_field.tolist())
    
    columns = ['x1', 'y1', 'x2', 'y2', 'strain1', 'strain2', 'strain3', 'strain4', 'strain5', 'strain6']
    return pd.DataFrame(data, columns=columns)

# Simulasi dataset
dataset = simulate_data()
print(dataset.head())
